{
  "manifest_version": 3,
  "name": "MIK LeetCode",
  "short_name": "MIK",
  "version": "1.0",
  "description": "Watch CodestorywithMIKâ€™s YouTube video solutions directly inside LeetCode problems.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "https://leetcode.com/*",
    "https://www.googleapis.com/*"
